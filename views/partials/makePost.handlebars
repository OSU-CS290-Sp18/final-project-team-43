   <div id="modal-backdrop" class="hidden"></div>
    <div id="make-post-modal" class="hidden">
      <div class="modal-dialog">

        <div class="modal-header">
          <h3>Make a Post</h3>
          <button type="button" class="modal-close-button">&times;</button>
        </div>

        <div class="modal-body">

          <div class="post-input-element">
            <label for="post-body">Text</label>
            <textarea id="post-body"></textarea>
          </div>

          <div class="post-input-element">
            <label for="post-title">Title</label>
            <input type="text" id="post-title">
          </div>

          <div class="post-input-element">
                <label for="post-author">Author</label>
                <input type="text" id="post-author">
              </div>

          <div class="post-input-element">
            <label for="post-date">Date</label>
            <input type="text" id="post-date">
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="modal-cancel-button">Cancel</button>
          <button type="button" class="modal-accept-button">Make Post</button>
        </div>

      </div>
    </div>